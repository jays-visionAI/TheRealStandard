rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // ============ HELPER FUNCTIONS ============
    
    // 로그인한 사용자인지 확인
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // 관리자인지 확인 (users 컬렉션에서 role이 ADMIN인지)
    function isAdmin() {
      return isAuthenticated() && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'ADMIN';
    }
    
    // ============ USERS ============
    match /users/{userId} {
      // 읽기: 인증된 사용자
      allow read: if isAuthenticated();
      // 생성: 인증된 사용자 (자신의 프로필 생성)
      allow create: if isAuthenticated();
      // 수정: 인증된 사용자
      allow update: if isAuthenticated();
      // 삭제: 관리자만
      allow delete: if isAdmin();
    }
    
    // ============ CUSTOMERS (Organizations) ============
    match /customers/{customerId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ PRODUCTS ============
    match /products/{productId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ SUPPLIERS ============
    match /suppliers/{supplierId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ ORDER SHEETS ============
    match /orderSheets/{orderSheetId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
    match /orderSheetItems/{itemId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // ============ SALES ORDERS ============
    match /salesOrders/{salesOrderId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    match /salesOrderItems/{itemId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // ============ PURCHASE ORDERS ============
    match /purchaseOrders/{purchaseOrderId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }

    match /purchaseOrderItems/{itemId} {
      allow read: if isAuthenticated();
      allow create, update, delete: if isAuthenticated();
    }
    
    // ============ SHIPMENTS ============
    match /shipments/{shipmentId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ VEHICLE TYPES ============
    match /vehicleTypes/{vehicleTypeId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ SYSTEM SETTINGS ============
    match /systemSettings/{settingId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ DOCUMENTS ============
    match /documents/{documentId} {
      allow read: if isAuthenticated();
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
    
    // ============ INVITE TOKENS ============
    match /inviteTokens/{tokenId} {
      // 읽기: 공개 (토큰으로 접근하므로)
      allow read: if true;
      allow create, update: if isAuthenticated();
      allow delete: if isAdmin();
    }
  }
}
